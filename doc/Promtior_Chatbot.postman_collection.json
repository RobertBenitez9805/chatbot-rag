							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"input\": \"What services does Promtior offer?\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/chat/invoke",
							"host": ["{{base_url}}"],
							"path": ["chat", "invoke"]
